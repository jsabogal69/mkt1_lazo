    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const marketSegmentsData = {
                labels: ['Casual Web/Canvas', 'Stretch Woven', 'Tactical/Outdoor', '"Perfect Fit" Tech'],
                datasets: [{
                    label: 'Market Segments',
                    data: [15, 30, 25, 30],
                    backgroundColor: [
                        '#fde047', // yellow-300
                        '#fbbf24', // amber-400
                        '#f59e0b', // amber-500
                        '#d97706'  // amber-600
                    ],
                    borderColor: '#f8f7f4',
                    borderWidth: 4,
                    hoverOffset: 8
                }]
            };

            const segmentDetails = {
                'Casual Web/Canvas': "The most traditional and commoditized category. Typically made from cotton with simple plaque or D-ring buckles. Represents the entry-point for many consumers, with prices often under $15.",
                'Stretch Woven': "Prioritizes comfort with elasticated, braided fabric allowing infinite adjustability. Extremely popular for casual and golf attire, this segment adapts to the wearer's movement.",
                'Tactical/Outdoor': "Defined by ruggedness. Constructed from high-denier nylon with robust quick-release or 'Cobra' style buckles. Appeals to outdoor, workwear, and 'Everyday Carry' (EDC) enthusiasts.",
                '"Perfect Fit" Tech': "The market's fastest-growing and most innovative segment. Defined by hole-less, micro-adjustable systems like ratchets or magnetic locks. Positioned as an engineered solution."
            };

            const marketSegmentsCtx = document.getElementById('marketSegmentsChart').getContext('2d');
            const marketSegmentsChart = new Chart(marketSegmentsCtx, {
                type: 'doughnut',
                data: marketSegmentsData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '50%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                font: {
                                    size: 14
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.raw}% Market Share (Est.)`;
                                }
                            }
                        }
                    },
                    onClick: (event, elements) => {
                        if (elements.length > 0) {
                            const chartElement = elements[0];
                            const index = chartElement.index;
                            const label = marketSegmentsData.labels[index];
                            document.getElementById('segment-title').innerText = label;
                            document.getElementById('segment-description').innerText = segmentDetails[label];
                        }
                    }
                }
            });

            const competitorsData = [
                 { name: 'FAIRWIN', tier: 'Value Vanguard', strategy: 'Offers the lowest price point for popular technologies like ratchet buckles. Dominates search via aggressive pricing and multi-packs.', weakness: 'Suffers from inconsistent quality, with frequent complaints of easily scratched buckles and failing ratchet mechanisms.' },
                 { name: 'Columbia', tier: 'Established Incumbent', strategy: 'Leverages decades of brand trust and a massive brick-and-mortar presence. Sells based on brand recall rather than product innovation.', weakness: 'Designs feel dated and lack modern features like stretch or micro-adjustment, making them technologically inferior to competitors.' },
                 { name: 'Arcade Belts', tier: 'Adventure Specialist', strategy: 'Sells a lifestyle of adventure built around their "performance stretch" recycled fabric and travel-friendly plastic buckles.', weakness: 'The buckle can be too wide for some pant loops, and the high degree of stretch is unsuitable for carrying heavier items.' },
                 { name: 'Anson Belt', tier: 'DTC Innovator', strategy: 'Re-engineered the belt with a "perfect fit" ratchet track system and a "mix & match" ecosystem of straps and buckles, backed by a lifetime guarantee.', weakness: 'High price point ($50+) creates a barrier to entry and limits visibility against cheaper alternatives on Amazon.' },
                 { name: 'Grip6', tier: 'DTC Innovator', strategy: 'Appeals to a minimalist tech aesthetic with a unique, low-profile friction-lock buckle and a lifetime guarantee.', weakness: 'The non-stretch design is less comfortable for some, and the buckle can occasionally loosen over time with certain movements.' },
                 { name: 'Groove Life', tier: 'Adventure Specialist', strategy: 'Focuses on extreme durability with a unique magnetic clasp for an easy on/off experience, backed by a powerful lifetime warranty.', weakness: 'Very high price point ($60+) and a bulky buckle design limit its audience to those prioritizing durability above all else.' }
            ];

            const competitorListEl = document.getElementById('competitor-list');
            const competitorNameEl = document.getElementById('competitor-name');
            const competitorTierEl = document.getElementById('competitor-tier');
            const competitorStrategyEl = document.getElementById('competitor-strategy');
            const competitorWeaknessEl = document.getElementById('competitor-weakness');
            
            let activeCompetitorButton = null;

            competitorsData.forEach(comp => {
                const button = document.createElement('button');
                button.className = 'w-full text-left p-4 rounded-lg border-2 border-gray-200 hover:bg-yellow-50 hover:border-yellow-400 transition-all duration-200';
                button.innerHTML = `<span class="font-semibold text-gray-800">${comp.name}</span><br><span class="text-sm text-gray-500">${comp.tier}</span>`;
                button.onclick = () => {
                    competitorNameEl.innerText = comp.name;
                    competitorTierEl.innerText = comp.tier;
                    competitorStrategyEl.innerHTML = `<strong class="text-gray-700">Strategy:</strong> ${comp.strategy}`;
                    competitorWeaknessEl.innerHTML = `<strong class="text-gray-700">Weakness:</strong> ${comp.weakness}`;

                    if(activeCompetitorButton) {
                        activeCompetitorButton.classList.remove('bg-yellow-100', 'border-yellow-500');
                    }
                    button.classList.add('bg-yellow-100', 'border-yellow-500');
                    activeCompetitorButton = button;
                };
                competitorListEl.appendChild(button);
            });

            // Mobile Menu Toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
            
            // Smooth scrolling for nav links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    if (mobileMenu.classList.contains('hidden') === false) {
                        mobileMenu.classList.add('hidden');
                    }
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
</body>
